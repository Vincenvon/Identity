@model Identity.Models.ChanModel

@{
    ViewBag.Title = "ChangeRole";
    //Layout = "~/Views/Shared/_ForPageWithMenu.cshtml";
}

<h2>ChangeRole</h2>
@Html.ValidationSummary()

@using (@Html.BeginForm())
{
    for (int i = 0; i < Model.Roles.Count(); ++i)
    {
        <p>@Html.CheckBoxFor(modelItem => Model.Roles[i].IsSelected)@Model.Roles[i].Role</p>
        @Html.HiddenFor(modelItem => Model.Roles[i].Role)
    }
    @Html.HiddenFor(modelItem => Model.UserId)
    <input type="submit" value="ok" />
}
